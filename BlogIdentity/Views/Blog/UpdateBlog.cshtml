@model Blog.Models.Blogs

<h2>Update Blog</h2>

<form method="post" asp-action="UpdateBlog">
    <div class="form-group">
        <label for="Id">Id:</label>
        <input type="text" class="form-control" asp-for="Id" required>
    </div>

    <div class="form-group">
        <label for="Title">Title:</label>
        <input type="text" class="form-control" asp-for="Title" required>
    </div>
    <div class="form-group">
        <label for="Content">Content:</label>
        <textarea class="form-control" asp-for="Content" rows="5"></textarea>
    </div>
    <div class="form-group">
        <label for="Category">Category:</label>
        <input type="text" class="form-control" asp-for="Category" required>
    </div>
    <div class="form-group">
        <label for="SubscriptionsAllowed">Subscriptions Allowed:</label>
        <input type="number" class="form-control" asp-for="SubscriptionsAllowed" required>
    </div>
    <div class="form-group">
        <label for="SubscriptionsUsed">Subscriptions Used:</label>
        <input type="number" class="form-control" asp-for="SubscriptionsUsed" required>
    </div>
    <button type="submit" class="btn btn-primary">Update</button>
</form>
