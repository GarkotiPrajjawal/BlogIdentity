@model Blog.Models.Users

<h2>Update User</h2>

<form method="post" asp-action="UpdateUser">
    <div class="form-floating py-2 col-12">
        <input asp-for="Id" class="form-control border-0 shadow" />
        <label asp-for="Id" class="ms-2"></label>
        <span asp-validation-for="Id" class="text-danger"></span>
    </div>

    <div class="form-floating py-2 col-12">
        <input asp-for="Name" class="form-control border-0 shadow" />
        <label asp-for="Name" class="ms-2"></label>
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-floating py-2 col-12">
        <input asp-for="Email" class="form-control border-0 shadow" />
        <label asp-for="Email" class="ms-2"></label>
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-floating py-2 col-12">
        <input asp-for="Password" class="form-control border-0 shadow" />
        <label asp-for="Password" class="ms-2"></label>
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div class="form-floating py-2 col-12">
        <input asp-for="Role" class="form-control border-0 shadow" />
        <label asp-for="Role" class="ms-2"></label>
        <span asp-validation-for="Role" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Update</button>
</form>
